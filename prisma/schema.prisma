generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id         String  @id @default(uuid())
  endereco  Endereco? @relation(fields: [enderecoId], references: [id])
  enderecoId String? @unique

  nome String
  email String @unique
  senha String
}

model Estabelecimento {
  id         String  @id @default(uuid())
  endereco  Endereco @relation(fields: [enderecoId], references: [id])
  enderecoId String @unique
  nome String
  descricao String
}

model Endereco {
  id String @id @default(uuid())
  cliente Cliente?
  // clienteId String @unique
  estabelecimento Estabelecimento?
  // estabelecimentoId String @unique
  logradouro String
  numero String
  complemento String?
  bairro String
  cidade String
  estado String
  cep String
  lat Float
  long Float
}

